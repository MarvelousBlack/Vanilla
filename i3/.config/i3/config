   hidden_state hide
   modifier $mod
   position top
   tray_output eDP-1
   output primary
	colors {
		statusline #000000
		separator #2d2d2d 
		background #F4ADD96B
		focused_workspace #636e88 #285de7 #dedfdg
		active_workspace #556677 #234567 #56ef67
		inactive_workspace #636d72 #2d2d2d #dedede
		urgent_workspace #ffffff #900000 #d23d32
		}

}

